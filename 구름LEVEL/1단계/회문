import java.io. *;
class Main {
    public static void main(String[] args)throws Exception {
        BufferedReader br = new BufferedReader(new InputStreamReader(System. in));
        int num = Integer.parseInt(br.readLine());
        StringBuilder sentence = new StringBuilder();
        Main meth = new Main();
        for (int i = 0; i < num; i ++) {
            int answer = 0;
            String spare = br.readLine();
            int len = spare.length();
            sentence.setLength(0);
            sentence.append(spare);
            char temp[] = sentence.toString().toCharArray();
            if (meth.cal(temp) == false) {
                for (int e = 0; e < len; e ++) {
                    sentence.setLength(0);
                    sentence.append(spare);
                    temp = sentence
                        .deleteCharAt(e)
                        .toString()
                        .toCharArray();
                    if (meth.cal(temp) == true) {
                        answer = 1;
                        break;
                    } else 
                        answer = 2;
                }
            } else {
                answer = 0;
            }
            System.out.println(answer);
        }
    }
    public boolean cal(char[] sen) {
        boolean status = false;
        for (int i = 0; i < sen.length / 2; i ++) {
            if (sen[i] == sen[sen.length - i - 1]) {
                status = true;
            } else {
                status = false;
                break;
            }
        }
        return status;
    }
}
//테스트 케이스는 통과했으나 시간 초과가 남
//반복문을 줄여보거나 편하게 문자 지우기 위해 StringBuilder를 사용한 것이 문제일듯
